#FC=ifort -O2 -xHost -openmp
#FC=gfortran -g -O2 -Wall -Wno-unused -fopenmp
FC=gfortran -g -O2 -Wall -Wno-unused -fopenmp -fno-align-commons -ffree-form
LIBS=libf77zmq.a -lzmq

EXE=hwserver hwclient

.PHONY: default

default: $(EXE)

%: %.f f77_zmq.h libf77zmq.a
	$(FC) $*.f -o $@ $(LIBS)

clean:
	$(RM) -f -- $(EXE) *.ipc
